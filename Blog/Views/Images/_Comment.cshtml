@model List<Blog.Models.Comment>

<div class="container">
    <div class="row">
        @foreach (var comment in Model)
        {
            <div class="container">
                <div class="well">
                <div>
                    <h3>
                        <box class = "btn btn-default btn-group">@comment.Name</box>
                    </h3>
                    <h3>
                        <box class="panel">@comment.Content</box>
                    </h3>
                    <h5>
                        <box>Added: </box>@comment.Time
                    </h5>
                </div>
                </div>
            </div>
        }
        <div>
            
                
                @Html.ActionLink("Back", "List", "Images", null, new { @class = "btn btn-default btn-xs" })
            
        </div>
    </div>
</div>
