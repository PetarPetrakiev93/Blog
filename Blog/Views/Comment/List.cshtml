@model List<Blog.Models.Comment>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">

        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Content</th>
                        <th>Time</th>
                        <th>Image ID</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            <td>@comment.Name</td>
                            <td>@comment.Content</td>
                            <td>@comment.Time</td>
                            <td>@comment.ImageId</td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", "Comment", new { @id = comment.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
